<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fireTopLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100"
    android:background="@color/colorPageBack"
    android:keepScreenOn="true"
    tools:context=".ScanCreditActivity"
    android:orientation="vertical">

    <com.synarc.app.datatopup.ML_Kit_Classes.CameraSourcePreview
        android:id="@+id/Preview"
        android:layout_weight="35"
        android:background="@drawable/button_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >

        <com.synarc.app.datatopup.ML_Kit_Classes.GraphicOverlay
            android:id="@+id/Overlay"
            android:layout_width="match_parent"
            android:foregroundGravity="center"

            android:layout_height="match_parent"
            />

    </com.synarc.app.datatopup.ML_Kit_Classes.CameraSourcePreview>>



    <LinearLayout
        android:layout_weight="65"
        android:id="@+id/resultsContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="2dp"


        android:gravity="bottom">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/results_spinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:background="@drawable/round_button_background"
            android:paddingTop="12dp"
android:layout_marginStart="150dp"
            android:drawableTop="@drawable/ic_camera_alt_black_24dp"
            android:layout_gravity="center"
            android:id="@+id/capture"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:gravity="center"
            android:text="" />

        <Button
            android:visibility="gone"
            android:background="@drawable/round_button_background"
            android:paddingTop="12dp"

            android:drawableTop="@drawable/ic_flash_on_black_24dp"
            android:layout_gravity="center"
            android:id="@+id/flash"
            android:layout_width="65dp"
            android:layout_height="65dp"

            android:layout_marginStart="50dp"
            android:gravity="center"
            android:text="" />

    </LinearLayout>


</LinearLayout>