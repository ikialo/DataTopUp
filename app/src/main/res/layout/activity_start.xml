<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_main"
    android:orientation="vertical"
    tools:context=".StartActivity">


    <TextView
        android:fontFamily="sans-serif-light"
        android:layout_marginTop="50dp"
        android:id="@+id/name"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Top Up PG"
        android:textSize="50sp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@color/cardColor"
        android:textColor="@color/colorWhiteET"
        android:text="Check Balance"
        app:layout_constraintBottom_toTopOf="@+id/grid"
        app:layout_constraintTop_toBottomOf="@+id/name"
        tools:ignore="MissingConstraints"
        android:onClick="checkBal"
        tools:layout_editor_absoluteX="5dp" />


    <GridLayout

        android:id="@+id/grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:columnCount="2"
        android:foregroundGravity="bottom"
        android:rowCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <android.support.v7.widget.CardView
            android:layout_width="150dp"

            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            app:cardBackgroundColor="@color/cardColor"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/tel"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/telikom_button"
                    android:onClick="Telikom_Click" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:gravity="center"
                    android:textColor="@color/colorWhiteET"
                    android:src="@drawable/scan_voucher_number"
                    android:text="TELIKOM"
                    android:textSize="20sp" />
            </LinearLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"

            android:layout_gravity="center"
            android:layout_marginBottom="2dp"
            app:cardBackgroundColor="@color/cardColor"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/cam"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/powerpress"
                    android:onClick="EsiPay_Click" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:gravity="center"
                    android:textColor="@color/colorWhiteET"
                    android:src="@drawable/scan_voucher_number"
                    android:text="ESIPAY"
                    android:textSize="20sp" />
            </LinearLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginEnd="2dp"
            android:elevation="20dp"


            app:cardBackgroundColor="@color/cardColor"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="161dp"
                android:layout_gravity="center"

                android:orientation="vertical">


                <Button
                    android:id="@+id/pow"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/cam_button"

                    android:onClick="Scan_Click" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:gravity="center"
                    android:textColor="@color/colorWhiteET"
                    android:src="@drawable/scan_voucher_number"
                    android:text="SCAN"
                    android:textSize="20sp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"

            android:elevation="20dp"
            app:cardBackgroundColor="@color/cardColor"
            app:cardCornerRadius="10dp">

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="161dp"
                android:layout_gravity="center"

                android:orientation="vertical">


                <Button
                    android:id="@+id/bmob"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/b_press"

                    android:onClick="bmob_Click" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:gravity="center"
                    android:src="@drawable/scan_voucher_number"
                    android:text="BMOBILE"
                    android:textColor="@color/colorWhiteET"
                    android:textSize="20sp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>


    </GridLayout>


</android.support.constraint.ConstraintLayout>